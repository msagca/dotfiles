{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain"
        },
        {
          "type": "git",
          "style": "plain",
          "template": "{{ if .UpstreamIcon }}{{ .UpstreamIcon }} {{ end }} {{ .HEAD }} {{ if .BranchStatus }}{{ .BranchStatus }} {{ end }}{{ if .Working.Changed }}\uF044 {{ .Working.String }} {{ end }}{{ if .Staging.Changed }}\uF046 {{ .Staging.String }} {{ end }}",
          "options": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "text",
          "style": "plain",
          "template": "> "
        }
      ]
    }
  ]
}
